{
    "bundles": {
        "FriendsOfBehat\\SymfonyExtension\\Bundle\\FriendsOfBehatSymfonyExtensionBundle": ["test"]
    },
    "copy-from-recipe": {
        "behat.dist.php": "behat.dist.php",
        "config/": "%CONFIG_DIR%/",
        "features/": "features/",
        "tests/": "tests/"
    },
    "add-lines": [
        {
            "file": ".dockerignore",
            "content": "etc/",
            "position": "bottom",
            "warn_if_missing": true
        },
        {
            "file": ".dockerignore",
            "content": "features/",
            "position": "bottom",
            "warn_if_missing": true
        }
    ],
    "gitignore": ["/behat.php"]
}
